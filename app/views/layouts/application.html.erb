<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags(default_meta) %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag *webpack_asset_paths('application', extension: 'css') %>
    <%= javascript_include_tag *webpack_asset_paths('vendor', extension: 'js') %>
    <%= javascript_include_tag *webpack_asset_paths('application', extension: 'js') %>
  </head>
  <body>
    <div class='flex-body'>
      <%#= render 'layouts/navigation' %>
      <%= react_component 'Nav', props: { loggedIn: logged_in?, currentUser: current_user } %>

      <main>
        <div class='container'>
          <%= render 'layouts/messages' %>
          <%= yield %>
        </div>
      </main>
        
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
